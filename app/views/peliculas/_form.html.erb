<%= simple_form_for(@pelicula) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.association :genero %>
    <%= f.input :duracion %>
    <%= f.input :calificacion %>
    <%= f.input :disponibilidad %>
    <%= f.association :estado %>
    <%= f.input :ejemplares %>
    <%= f.association :empleado %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
